<%layout('layouts/boilerplate')%>
<style>
  .full-width{
   width: 100%;
    height:280px;
    object-fit: cover;
  }
</style>

    <h1>ALL PINK CAMPAIGNS</h1>

<% for(let pinkcampaign of pinkcampaigns){ %>
<div class="card mb-3 " > 
<div class="row">
    <div class="col-md-4 text-center">
        <img class="full-width" src="<%=pinkcampaign.images[0].url%>" alt="">
    </div>
    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title "><%=pinkcampaign.city %></h5> 
        <h6 class="card-title text-muted">$<%=pinkcampaign.price%></h6> 
             <p class="card-text ">
               <%=pinkcampaign.description  %>   
            </p>
              <p class="card-text ">
            <small class="text-muted"><%=pinkcampaign.title  %></small>
         </p>
         <p>   <small ><%=pinkcampaign.date  %></small>
        </p>
          <a href="/pinkcampaigns/<%=pinkcampaign._id%>" class="btn btn-primary" >View </a>
        </div>
    </div>
</div></div>

<%}%>


